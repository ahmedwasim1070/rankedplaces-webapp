generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model Users {
  id        Int      @id @default(autoincrement())
  unique_id String   @unique
  email     String   @unique
  name      String
  places    Places[]
  tags      Tags[]
  votes     Votes[]
}

model Places {
  id               Int         @id @default(autoincrement())
  place_id         String      @unique
  name             String      @unique
  pfp              String?     @unique
  category         String
  address          String
  city             String
  lat              Float
  lng              Float
  country          String
  country_code     String
  phone            String?
  website          String?
  maps_url         String      @unique
  review_value     Float       @default(0.0)
  review_amount    Int         @default(0)
  total_up_votes   Int         @default(0)
  total_down_votes Int         @default(0)
  added_by_id      Int
  user             Users       @relation(fields: [added_by_id], references: [id])
  place_tag        PlaceTags[]
}

model Tags {
  id        Int         @id @default(autoincrement())
  name      String      @unique
  author_id Int
  author    Users       @relation(fields: [author_id], references: [id])
  place_tag PlaceTags[]
}

model PlaceTags {
  id       Int    @id @default(autoincrement())
  place_id Int
  tag_id   Int
  place    Places @relation(fields: [place_id], references: [id])
  tag      Tags   @relation(fields: [tag_id], references: [id])

  up_votes   Int @default(0)
  down_votes Int @default(0)

  vote Votes[]

  @@unique([place_id, tag_id])
}

model Votes {
  id          Int      @id @default(autoincrement())
  vote_type   VoteType
  voted_by_id Int
  user        Users    @relation(fields: [voted_by_id], references: [id])

  place_tag_id Int
  place_tag    PlaceTags @relation(fields: [place_tag_id], references: [id])

  @@unique([voted_by_id, place_tag_id])
}

enum VoteType {
  UP
  DOWN
}
